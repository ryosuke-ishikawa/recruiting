<% provide(:title, '住所情報編集') %>
<div class = "container">
  <div class = "center">
    <h1>住所情報編集</h1>
  </div>
  <%= form_for(@address) do |f| %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= render 'shared/error_messages', object: f.object %>
      <div class = "row row-10">
        <div class= "col-md-4">
          <div class="field">
          <%= f.label :postcode, class: "control-label" %>
          <%= f.text_field :postcode, placeholder: "012-3456",autofocus: true, class: "form-control" %>
          </div>
        </div>
      </div>
      <div class = "row row-10">
        <div class= "col-md-4">
          <div class="field">
            <%= f.label :prefecture_id, class: "control-label" %></br>
            <%= f.collection_select(:prefecture_id, Prefecture.all,:id,:name, class: "form-control") %>
          </div>
        </div>
      </div>
      <div class = "row row-10">
        <div class= "col-md-12">
          <div class="field">
            <%= f.label :city1, class: "control-label" %>
            <%= f.text_field :city1, class: "form-control" %>
          </div>
        </div>
      </div>
      <div class = "row row-10">
        <div class= "col-md-12">
          <div class="field">
            <%= f.label :city2, class: "control-label" %>
            <%= f.text_field :city2, class: "form-control" %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3 col-md-offset-3">
      <div class="actions">
        <%= f.submit "更新する", class: "btn btn-lg btn-primary" %>
      </div>
    </div>
  </div>
  <% end %>
</div>